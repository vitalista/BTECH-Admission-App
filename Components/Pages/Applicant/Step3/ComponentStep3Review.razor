<MudGrid Class="d-flex flex-column justify-content-center mx-auto"
         Style="height: 100vh; max-width: 1200px; text-align: center; align-items:center; padding-top:100px">

    <MudIcon Icon="@Icons.Material.Filled.HourglassTop"
             Color="Color.Warning"
             Size="Size.Large"
             Class="mb-4"
             Style="font-size: 64px;" />

    <MudText Typo="Typo.h4"
             Class="font-weight-bold mb-2"
             Color="Color.Primary">
        We're Reviewing Your Application
    </MudText>

    <MudText Typo="Typo.subtitle1"
             Class="mb-4"
             Color="Color.Surface">
        Please be patient while we complete the review.<br />
        You can expect an update via <strong>email</strong>.
    </MudText>

    <MudDivider Class="my-4" Style="width: 60%;" />

    <MudText Typo="Typo.caption"
             Color="Color.Secondary">
        We’ll notify you as soon as there’s an update.<br />
        Thank you for your understanding!
    </MudText>
</MudGrid>

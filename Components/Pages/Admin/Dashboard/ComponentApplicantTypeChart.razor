@using static BTECH_APP.Enums
<MudItem xs="12" md="6" class="d-flex justify-center">
    <MudText  Align="Align.Center">Applicant Type</MudText>
    <MudChart ChartType="ChartType.Donut" Width="100%" Height="200px" InputData="@data" InputLabels="@labels">
        <CustomGraphics>
            <text class="donut-inner-text" x="50%" y="35%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="5">Total</text>
            <text class="donut-inner-text" x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="black" font-family="Helvetica" font-size="6">@data.Sum().ToString()</text>
        </CustomGraphics>
    </MudChart>
</MudItem>

@code {
    public double[] data = { 25, 77, 28, 5 };
    public string[] labels =
        {
            ApplicantTypes.Freshmen.GetDisplayName(),
            ApplicantTypes.Transferee.GetDisplayName(),
            ApplicantTypes.AlsGraduate.GetDisplayName(),
        };
}
